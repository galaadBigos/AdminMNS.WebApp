@model IEnumerable<AdminMNS.WebApp.Models.ViewModel.GraduatingClass.IndexGraduatingClassViewModel>

@{
	ViewData["Title"] = "Index Formation";
}

<div class="container-menu">
	<h1>Index</h1>

	<p>
		<a asp-action="Create">Ajouter une nouvelle formation</a>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.StartDate)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.EndDate)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.StartDate)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.EndDate)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id">Éditer</a> |
						<a asp-action="Details" asp-route-id="@item.Id">Détails</a> |
						<a asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div>
		<a asp-controller="Administration" asp-action="Index">Retour à l'accueil d'administration</a>
	</div>
</div>